<div class="author">
    <!-- <h1 class="author_heading">Standard Operating Procedures</h1> -->
    <h1 class="author_heading">Find all the important Call Centre Processes and Information.</h1>
    <p class="author__body"><em>Eezi and Fast</em> way to get updated.</p>
</div>

<img src="/img/hero-image.webp" alt="gscc" class="hero-image" width="981" height="528">

<section class="articles">
    <br />
    <hr />
    <h3 class="articles__heading"><span >Updated and Useful Information</span></h3>
    <hr />
    <ul class="article-ul">

        <% data.forEach(post => { %>
            <li>
                 <a href="/post/<%= post._id %>">
                     <span><%= post.title %></span>
                     <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
                 </a>
            </li>
        <% }) %>
           
    </ul>

    <% if ( nextPage !== null ) { %> 
        <a href='/?page=<%= nextPage %>' class='pagination'>&lt; View Older Posts</a>
    <% } %>

</section>